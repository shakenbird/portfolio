---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="shaken_bird">
	<main>
  	<h1 style="display:inline-block">I'm shaken_bird<span class="dot">.</span></h1>
  	<p1>I'm a front-end developer that designs creative and intuitive applications on the web.</p1>
  		<ion-icon style="margin-left:0;" name="logo-discord"></ion-icon>
		<ion-icon name="logo-twitter"></ion-icon>
  		<ion-icon name="mail"></ion-icon>
  	<h2>Projects</h2>
    <div class="grid-container">
      <div class="grid-item">
        <h3>my website</h3>
      </div>
	  	<Card
	  		href="https://astro.build/integrations/"
	  		title="my website"
  		/>
    </div>

  		<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
		<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
	</main>
</Layout>

<style>
@import url('https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;700&display=swap');

main {
	font-family: 'Work Sans', sans-serif;
	text-rendering: optimizeLegibility;
	position: relative;
  	margin-top: 10%;
  	margin-left: 25%;
  	margin-right: 25%;
}
h1 {
  font-weight: 700;
  font-size: 44px;
}

.dot {
  color: #ee9b00;
  font-size: 50px;
  display: inline-block;
}

p1 {
  display: block;
}

ion-icon {
  font-size: 20px;
  color: #1f1f1f;
  display: inline-block;
  margin-top: 25px;
  margin-left: 10px;
  padding: 7.5px;
  background-color: #e3d9d1;
  border-radius: 8px;
}
ion-icon:hover {
  cursor: pointer;
  background-color: #c4bdb7;
  transition-duration: 0.3s;
}

h2 {
  font-weight: 700;
  font-size: 30px;
}

.grid-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-auto-rows: 110px;
  grid-gap: 20px;
}

@media screen and (max-width: 1550px) {
  main {
    margin-top: 7.5%;
    margin-left: 15%;
    margin-right: 15%;
  }
  h1 {
    font-size: 40px;
  }
}

@media screen and (max-width: 750px) {
  area {
    margin-top: 10%;
    margin-left: 30px;
    margin-right: 30px;
  }
  .grid-container {
    grid-template-columns: 100%;
  }
  h1 {
    font-size: 40px;
  }
}
</style>
